# Makefile for show_image_c - Optimized C screen capture

CC = gcc
CFLAGS = -O3 -Wall -Wextra
LDFLAGS = -lX11 -lXext -lm

TARGET = show_image_c
SOURCE = show_image_c.c

all: $(TARGET)

$(TARGET): $(SOURCE)
	$(CC) $(CFLAGS) -o $(TARGET) $(SOURCE) $(LDFLAGS)

clean:
	rm -f $(TARGET)

install: $(TARGET)
	install -m 755 $(TARGET) /usr/local/bin/

.PHONY: all clean install

